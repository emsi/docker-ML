#nvidia-docker build -f Dockerfile-py3 --rm=true -t emsi/deep-learning:gpu-py3 .
#nvidia-docker build -f Dockerfile-py3-TF-1.2 --no-cache --rm=true -t emsi/deep-learning:gpu-py3-TF-1.2 .
#nvidia-docker build -f Dockerfile-py3-TF-1.2-conda --rm=true -t emsi/deep-learning:gpu-py3-TF-1.2-conda .
nvidia-docker build -f Dockerfile-py3-TF-1.3       --rm=true -t emsi/deep-learning:gpu-py3-TF-1.3 .
#nvidia-docker build -f Dockerfile-py3-TF-1.3-conda --rm=true -t emsi/deep-learning:gpu-py3-TF-1.3-conda .
